{% extends 'base.html.twig' %}

{% block title %}Hello ProductController!{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">
            {% for pro in product %}
                <div class="col-lg-3">
                    <div class="card shadow" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">{{ pro.name }}</h5>
                            <h6 class="card-subtitle mb-2 text-muted">{{ pro.price }} $</h6>
                            <p class="card-text">{{ pro.description }}</p>
                            <a href=" {{path('product_show', {slug: pro.slug}) }}"
                                class="btn btn-secundary">Voir</a>
                            <a href=" {{path('product_edit', {id: pro.id}) }}"
                                class="btn btn-secundary">Modifier</a>
                            <a href=" {{path('product_delete', {id: pro.id}) }}"
                                class="btn btn-danger">Supprimer</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
